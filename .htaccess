RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.elagageurbaintr\.ca [NC]
RewriteRule ^(.*)$ https://elagageurbaintr.ca/$1 [L,R=301]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://elagageurbaintr.ca/$1 [R=301,L]


RewriteCond %{THE_REQUEST} /zone-intervention/ville(\.php)?\?ville=([a-zA-Z0-9-]+)\s [NC]
RewriteRule ^zone-intervention/ville(\.php)?$ /zone-intervention/abattage-arbres-et-taillage-haies-a-%2? [R=301,L]


RewriteCond %{THE_REQUEST} /zone-intervention/district(?:\.php)?\?ville=([a-zA-Z0-9-]+)&district=([a-zA-Z0-9-]+)\s [NC]
RewriteRule ^zone-intervention/district(\.php)?$ /zone-intervention/abattage-arbres-et-taillage-haies-secteur-%2-a-%1? [R=301,L]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^zone-intervention/abattage-arbres-et-taillage-haies-a-([a-zA-Z0-9-]+)/?$ zone-intervention/ville.php?ville=$1 [L,QSA]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^zone-intervention/abattage-arbres-et-taillage-haies-secteur-([a-zA-Z0-9-]+)-a-([a-zA-Z0-9-]+)/?$ zone-intervention/district.php?ville=$2&district=$1 [L,QSA]

# Remove .php extension from URLs (except for AJAX calls)
# Skip if the request is for a .php file directly (like AJAX calls)
RewriteCond %{THE_REQUEST} !sendmail\.php [NC]
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Internally forward extensionless URLs to .php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*?)/?$ $1.php [L]


# Enable Expires headers

<IfModule mod_expires.c>
  ExpiresActive On
  
# Images

  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  
# Other file types

  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# BEGIN Cache-Control Headers

<IfModule mod_headers.c>
  <FilesMatch "\.(ico|jpe?g|png|gif|swf|gz|ttf|webp)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  <FilesMatch "\.(css)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
  <FilesMatch "\.(js)$">
    Header set Cache-Control "max-age=2592000, private"
  </FilesMatch>
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=7200, public"
  </FilesMatch>
  # Disable caching for scripts and other dynamic files
  <FilesMatch "\.(pl|php|cgi|spl|scgi|fcgi)$">
    Header unset Cache-Control
  </FilesMatch>
</IfModule>
# END Cache-Control Headers

Header always unset "X-Powered-By"
